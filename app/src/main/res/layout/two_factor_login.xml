                <!--android:text="@string/professional_login"-->
                <!--android:textColor="@color/black_color"-->
                <!--android:textSize="13dp" />-->
                <!--</RelativeLayout>-->
            </LinearLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/et_email_userlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:drawableLeft="@mipmap/envelope"
                android:drawablePadding="10dp"
                android:hint="Enter Email Address"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingBottom="16dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv2"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_password_userlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:drawableLeft="@mipmap/lockopen"
                android:drawablePadding="10dp"
                android:hint="Enter Password"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:paddingBottom="16dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_login_userlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/green_round_corner_button"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="or"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/iv_google_userlogin"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@mipmap/google" />

                <ImageButton
                    android:id="@+id/iv_facebook_userlogin"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:src="@mipmap/facebook" />

                <ImageButton
                    android:id="@+id/iv_linkedin_userlogin"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@mipmap/linkedin" />

