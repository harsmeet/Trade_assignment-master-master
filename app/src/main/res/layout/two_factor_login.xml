            <!--android:padding="5dp"-->
            <!--android:text="@string/continue_without_login"-->
            <!--android:textColor="@color/default_text_color"-->
            <!--android:textSize="14sp" />-->
        </LinearLayout>

    </ScrollView>
</RelativeLayout>